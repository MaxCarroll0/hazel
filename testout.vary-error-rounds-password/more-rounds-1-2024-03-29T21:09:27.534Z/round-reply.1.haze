fun model, action ->
    case model, action
    | (password, criteria, strength), UpdatePassword(new_password) => (new_password, criteria, check_strength(new_password, criteria))
    | (password, criteria, strength), ClearCriteria => (password, [], strength)
    | (password, criteria, strength), AddCriterion(criterion) => (password, List.cons(criterion, criteria), check_strength(password, List.cons(criterion, criteria)))
    | (password, criteria, strength), RemoveCriterion(criterion) => (password, List.filter(fun c -> c != criterion, criteria), check_strength(password, List.filter(fun c -> c != criterion, criteria)))        
    end
