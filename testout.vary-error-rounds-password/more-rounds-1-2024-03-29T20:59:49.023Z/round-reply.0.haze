fun model, action ->
match model, action with
| (password, criteria, strength), UpdatePassword(new_password) => (new_password, criteria, check_strength(new_password, criteria))
| (password, criteria, strength), AddCriterion(new_criterion) => (password, new_criterion::criteria, check_strength(password, new_criterion::criteria))
| (password, criteria, strength), RemoveCriterion(removed_criterion) => let new_criteria = List.filter(fun c -> c != removed_criterion, criteria) in (password, new_criteria, check_strength(password, new_criteria))
| (password, criteria, strength), ClearCriteria => (password, [], Weak) end