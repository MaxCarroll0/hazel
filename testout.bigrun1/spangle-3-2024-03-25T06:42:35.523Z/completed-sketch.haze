# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | ChangeEmoji(c) => { model with current_emoji = c }
  | SelectCell (r, c) => { model with grid = updateGrid(model.grid, r, c, model.current_emoji) }
  | Clear => { model with grid = clearGrid(model.grid) }
  | Fill => { model with grid = fillRowInGrid(model.grid, model.current_row, model.current_emoji) }
  end
in
