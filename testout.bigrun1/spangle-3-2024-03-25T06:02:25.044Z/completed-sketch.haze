# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | AddBooking(user, day, time) => let newID = List.length(getBookings(model)) in (initFormState, (getBookings(model)) :: [(day, time, user, newID)], newID + 1)
  | CancelBooking(user, id) => (form, rm_booking(user, id, getBookings(model)), nextID)
  | ClearBookings => (form, [], 0)
  end
in
