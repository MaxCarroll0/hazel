# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  
fun (model, action) ->
  case action
    | MakeBooking(b) => { model with bookings = b :: model.bookings }
    | CancelBooking(b) => 
        let new_bookings = List.filter(fun b' -> b' != b, model.bookings) in
        { model with bookings = new_bookings }
  end
in
