# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | CheckPassword(p) =>
    let Strength(s) = check_password_strength(p) in
    { model | password = p, strength = s }
  | ChangeAlgorithm(a) =>
    { model | algorithm = a, strength = check_password_strength(model.password) } end
in