# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
    case action
    | Start => model
    | EmojiSelected(emoji) => { model with current_emoji = emoji }
    | GridClicked(row, col) => { model with grid = updateGrid(model.grid, row, col, model.current_emoji) }
    | Clear => { model with grid = clearGrid(model.grid) }
    end
in
