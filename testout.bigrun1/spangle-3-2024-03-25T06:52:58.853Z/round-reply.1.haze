fun (cur_password, cur_criteria, _), action ->
  case action
  | UpdatePassword(new_password) => (new_password, cur_criteria, check_strength(new_password, cur_criteria))
  | ClearCriteria => (cur_password, [], Weak)
  | AddCriterion(new_criterion) => (cur_password, new_criterion :: cur_criteria, check_strength(cur_password, new_criterion :: cur_criteria))
  | RemoveCriterion(criterion) => let new_criteria = List.remove(criterion, cur_criteria) in
                                   (cur_password, new_criteria, check_strength(cur_password, new_criteria))
  end