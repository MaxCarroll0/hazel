
fun (model, action) ->
let (password, criteria, strength) = model in
case action
| UpdatePassword(new_password) => (new_password, criteria, calculateStrength(new_password, criteria))
| ClearCriteria => (password, [], strength_of(0))
| AddCriterion(criterion) => (password, List.append(criteria, criterion), calculateStrength(password, List.append(criteria, criterion)))
| RemoveCriterion(criterion) => let new_criteria = List.filter(criterion, (fun c -> c != criterion)) in (password, new_criteria, calculateStrength(password, new_criteria))
end