# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
    case action
      | Checking(strength) => { model with currently_checking = true; password_strength = Weak; }
      | StrengthChecked(strength) => { model with currently_checking = false; password_strength = strength; }
      | PasswordChanged(new_password) => { model with password = new_password; currently_checking = false; }
    end
in