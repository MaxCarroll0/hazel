# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
    | UpdatePassword(pw) => updatePassword(model, pw)
    | ClearCriteria => clearCriteria(model)
    | AddCriterion(criterium) => addCriterion(model, criterium)
    | RemoveCriterion(criterium) => removeCriterion(model, criterium)
  end
in