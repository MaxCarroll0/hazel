# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | NoOp => model
  | Toggle(index) => { model with todos = toggle(index, model.todos) }
  | Remove(index) => { model with todos = remove(index, model.todos) }
  | Add => { model with todos = add(model) }
  | UpdateNewTodoName(name) => { model with newTodoName = name}
  | UpdateNewTodoDescription(desc) => { model with newTodoDescription = desc}
  end
in
