# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => let (buffer, todos) = model in (string_concat("", [buffer]), add(model))
  | RemoveTodo(idx) => let (buffer, todos) = model in (buffer, remove(idx, todos))
  | ToggleTodo(idx) => let (buffer, todos) = model in (buffer, toggle(idx, todos))
  | UpdateBuffer(new_buffer) => let (buffer, todos) = model in (new_buffer, todos)
  end
in
