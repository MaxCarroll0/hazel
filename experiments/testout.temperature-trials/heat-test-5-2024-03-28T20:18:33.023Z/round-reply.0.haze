
fun (playlist, action) ->
  case action
  | PlaySong(id) => (playlist[0], Playing(id))
  | PauseCurrentSong =>
    case playlist[1]
    | Playing(id) => (playlist[0], PausedOn(id))
    | _ => playlist
    end
  | RemoveSong(id) => (List.filter(fun song_id -> song_id != id, playlist[0]), playlist[1])
  | AddSong(id) => (id::playlist[0], playlist[1])
  end