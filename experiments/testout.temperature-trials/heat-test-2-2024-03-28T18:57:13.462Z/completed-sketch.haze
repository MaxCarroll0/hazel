# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => add(model)
  | RemoveTodo(i) => let buffer, todos = model in buffer, remove(i, todos)
  | ToggleTodo(i) => let buffer, todos = model in buffer, toggle(i, todos)
  | UpdateBuffer(s) => s, snd(model)
  end
in
