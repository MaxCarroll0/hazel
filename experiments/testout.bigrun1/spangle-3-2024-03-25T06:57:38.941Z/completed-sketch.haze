# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun m, a -> 
case a 
| UpdatePassword(pwd) => update_password(m, pwd)
| ClearCriteria => clear_criteria(m)
| AddCriterion(criterion) => add_criterion(m, criterion)
| RemoveCriterion(criterion) => remove_criterion(m, criterion)
end
in