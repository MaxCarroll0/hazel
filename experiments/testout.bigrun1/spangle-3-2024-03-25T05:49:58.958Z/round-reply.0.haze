fun (playlist, action) ->
  case action of
  | PlaySong(id) => (fst(playlist), Playing(id))
  | PauseCurrentSong => 
      case snd(playlist) of
      | Playing(id) => (fst(playlist), PausedOn(id))
      | _ => playlist
      end
  | RemoveSong(id) => (List.filter((!=) id, fst(playlist)), snd(playlist))
  | AddSong(id) => (id::fst(playlist), snd(playlist))
  end