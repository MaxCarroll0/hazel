# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | SubmitBooking(user, bookingID) => 
    let userBookings = getUserBookings(model, user) in
    let updatedBookings = rm_booking(user, bookingID, userBookings) in
    { model | bookings = updatedBookings }
  | ChangeFormState(newState) =>
    { model | formState = newState }
in
