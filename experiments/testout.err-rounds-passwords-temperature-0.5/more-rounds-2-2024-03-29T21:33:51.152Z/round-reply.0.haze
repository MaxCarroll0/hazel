fun (model, action) ->
  case action
  | UpdatePassword(new_password) => (new_password, model.1, model.2)
  | ClearCriteria => (model.0, [], model.2)
  | AddCriterion(criterion) => (model.0, criterion::model.1, model.2)
  | RemoveCriterion(criterion) => (model.0, List.filter(fun c -> c != criterion, model.1), model.2)
  end