fun model, action ->
  case action 
    | Add(songId) => 
        let current_songs = get_songs(model) in
        {model with playList = songId::current_songs}
    | Remove(songId) =>
        let current_songs = get_songs(model) in
        {model with playList = List.remove(songId, current_songs)}
    | ChangeState(newState) => {model with state = newState}
  end