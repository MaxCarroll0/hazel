# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun playlist, action ->
  case action
  | PlayListAction.Add(song) => { playlist with songs = song :: get_songs(playlist) }
  | PlayListAction.Remove(song) => { playlist with songs = List.remove(song, get_songs(playlist)) }
  | PlayListAction.ChangeState(state) => { playlist with state = state } 
  end
in