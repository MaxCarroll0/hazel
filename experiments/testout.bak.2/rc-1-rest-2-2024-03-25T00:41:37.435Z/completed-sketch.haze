# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (model, action) ->
  case action
  | AddTrack(track) => { model with tracks = track :: model.tracks }
  | RemoveTrack(trackId) => { model with tracks = List.filter((fun t -> t.id != trackId), model.tracks) }
  | Play => { model with isPlaying = true }
  | Pause => { model with isPlaying = false }
  end
in