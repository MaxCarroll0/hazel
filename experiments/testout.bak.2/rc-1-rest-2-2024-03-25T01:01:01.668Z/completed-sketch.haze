# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
    case action 
    | Book(room) => { model with rooms_booked = room::model.rooms_booked }
    | Unbook(room) => { model with rooms_booked = List.filter(fun r -> r != room, model.rooms_booked) }
    | ChangeUser(user) => { model with current_user = user }
    | Refresh => model
    end
in
