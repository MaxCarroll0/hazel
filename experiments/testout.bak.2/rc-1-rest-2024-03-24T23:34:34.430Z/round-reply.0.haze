fun model, action ->
  case action
  | AddTodo => add(model)
  | RemoveTodo(i) => let (_, todos) = model in (string_concat(string_sub(model, 0, i), string_sub(model, i + 1, string_length(model))), remove(i, todos))
  | ToggleTodo(i) => let (buffer, todos) = model in (buffer, toggle(i, todos))
  | UpdateBuffer(str) => let (_, todos) = model in (str, todos)
  end
