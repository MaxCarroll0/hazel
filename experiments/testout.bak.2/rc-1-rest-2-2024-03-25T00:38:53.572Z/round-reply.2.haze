fun (playlist, action) ->
  let (songs, state) = playlist in
    case action
    | PlaySong(id) => (songs, Playing(id))
    | PauseCurrentSong => (songs, case state
                                   | Playing(id) => PausedOn(id)
                                   | _ => state end)
    | RemoveSong(id) => (List.filter(fun songId -> songId != id, songs), state)
    | AddSong(id) => (List.cons(id, songs), state)
    end