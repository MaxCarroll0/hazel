# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (playlist, action) ->
    case action
    | AddSong(id) => playlist_add_song(playlist, id)
    | RemoveSong(id) => playlist_remove_song(playlist, id)
    | Play => change_playlist_state(playlist, Playing)
    | Pause => change_playlist_state(playlist, Paused)
    | Stop => change_playlist_state(playlist, Stopped)
    end
in