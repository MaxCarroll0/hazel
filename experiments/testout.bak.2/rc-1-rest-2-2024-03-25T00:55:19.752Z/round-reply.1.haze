fun model, action ->
    case action
    | SelectRoom(rid) => { model with currentRoom = rid }
    | SelectDateTime(dt) => { model with currentDateTime = dt }
    | SubmitForm => { model with bookings = rm_booking(model.user, model.bookingId, model.bookings)}
    | ResetForm => { model with currentRoom = initFormState, currentDateTime = initFormState }
    end