
fun model, action ->
  case action
  | SetEmoji(emoji) => { model with emoji = emoji }
  | SetColor(color) => { model with color = color }
  | Clear => { model with canvas = Canvas.empty() }
  | Undo => { model with canvas = Canvas.undo(model.canvas) }
  | Redo => { model with canvas = Canvas.redo(model.canvas) }
  | Draw(x, y) => { model with canvas = Canvas.draw(model.canvas, x, y, model.emoji, model.color) }
  end