# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddTodo => add_todo(model)
  | RemoveTodo(idx) => remove_todo(model, idx)
  | ToggleTodo(idx) => toggle_todo(model, idx)
  | UpdateBuffer(str) => update_buffer(model, str)
  end
in