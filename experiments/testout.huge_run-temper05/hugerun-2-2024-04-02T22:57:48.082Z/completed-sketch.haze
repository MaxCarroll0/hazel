# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (buffer, todos), action ->
  case action
  | AddTodo => (buffer, (buffer, false)::todos)
  | RemoveTodo(i) =>
    let todos = List.filteri((fun idx, _ -> idx != i), todos) in
    (buffer, todos)
  | ToggleTodo(i) =>
    let todos = List.mapi((fun idx, (title, done) -> if idx == i then (title, !done) else (title, done)), todos) in
    (buffer, todos)
  | UpdateBuffer(s) => (s, todos)
  end
in
