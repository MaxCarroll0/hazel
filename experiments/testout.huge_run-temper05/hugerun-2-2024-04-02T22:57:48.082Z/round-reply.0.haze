
fun model, action ->
  case action
  | AddTodo => (model.0, (model.0, false)::model.1)
  | RemoveTodo(i) => (model.0, List.remove_at(i, model.1))
  | ToggleTodo(i) =>
    let (title, done) = List.nth(i, model.1) in
    (model.0, List.update(i, (title, !done), model.1))
  | UpdateBuffer(s) => (s, model.1)
  end