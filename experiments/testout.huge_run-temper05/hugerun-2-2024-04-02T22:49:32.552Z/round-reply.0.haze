fun m, a ->
  case a
  | AddTodo => let (buffer, todos) = m in (string_trim(""), add(m))
  | RemoveTodo(idx) => let (buffer, todos) = m in (buffer, remove(idx, todos))
  | ToggleTodo(idx) => let (buffer, todos) = m in (buffer, toggle(idx, todos))
  | UpdateBuffer(str) => let (buffer, todos) = m in (str, todos)
  end