fun (buffer, todos), action ->
    case action
    | AddTodo => (buffer, (buffer, false)::todos)
    | RemoveTodo(idx) => (buffer, List.remove(idx, todos))
    | ToggleTodo(idx) =>
        (buffer, List.update(idx, fun (task, done) -> (task, !done), todos))
    | UpdateBuffer(str) => (str, todos)
    end