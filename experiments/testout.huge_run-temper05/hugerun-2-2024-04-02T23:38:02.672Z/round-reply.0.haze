fun model, action ->
  case action
  | AddBooking(user, weekday, timeOfDay) => let (form, bookings, nextID) = model in
                                            let newBooking = ((weekday, timeOfDay), user, nextID) in
                                            ((weekday, timeOfDay), user), newBooking::bookings, nextID + 1
  | CancelBooking(user, bookingID) => let (form, bookings, nextID) = model in
                                       (form, rm_booking(user, bookingID, bookings), nextID)
  | ClearBookings => (initFormState, [], 0)
  end
