# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | ChangePassword(password) => { model | password = password, strength = calculateStrength(password, model.criteria) }
  | AddCriteria(criteria) => { model | criteria = criteria :: model.criteria }
  | RemoveCriteria(criteria) => { model | criteria = List.remove(criteria, model.criteria) }
  end
in