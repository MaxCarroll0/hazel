fun (model, action) ->
  case action
  | AddTodo => let (buffer, todos) = model in (buffer, todos ++ [buffer])
  | RemoveTodo(index) => let (buffer, todos) = model in (buffer, List.remove(index, todos))
  | ToggleTodo(index) => let (buffer, todos) = model in (buffer, List.map(fun i, x -> if i == index then !x else x, todos))
  | UpdateBuffer(str) => let (_, todos) = model in (str, todos)
  end