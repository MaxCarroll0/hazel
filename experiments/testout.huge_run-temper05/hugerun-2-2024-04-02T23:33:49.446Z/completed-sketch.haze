# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddBooking(user, weekday, time) => addBooking(model, (time, user))
  | RemoveBooking(id) => removeBooking(model, id)
  | UpdateBuffer(str) => updateBuffer(model, str)
  end
in
