
fun model, action ->
  case action
  | ChangePassword(password) => 
      let new_password = string_trim(password) in
      let new_strength = calculateStrength(new_password, model.criteria) in
      {model with password = new_password; strength = new_strength}
  | ChangeCriteria(criteria) => 
      let new_strength = calculateStrength(model.password, criteria) in
      {model with criteria = criteria; strength = new_strength}
  end