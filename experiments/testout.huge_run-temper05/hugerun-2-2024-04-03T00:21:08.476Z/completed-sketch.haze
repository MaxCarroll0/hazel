# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddTodo => (model.1, model.2 ++ [model.1])
  | RemoveTodo(i) => (model.1, List.remove(i, model.2))
  | ToggleTodo(i) =>
    let (d, s) = List.nth(i, model.2) in
    (model.1, List.update(i, (d, !s), model.2))
  | UpdateBuffer(str) => (str, model.2)
  end
in