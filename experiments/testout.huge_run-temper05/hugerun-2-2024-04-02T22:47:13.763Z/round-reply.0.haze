fun (buffer, todos), action ->
    case action
    | AddTodo =>
      if buffer $== "" then (buffer, todos)
      else ("", (buffer, false)::todos)
    | RemoveTodo(idx) =>
      (buffer, List.remove(idx, todos))
    | ToggleTodo(idx) =>
      (buffer, List.update(idx, fun (desc, status) -> (desc, !status), todos))
    | UpdateBuffer(new_buffer) =>
      (new_buffer, todos)
    end