fun (buffer, todos), action ->
    case action
    | AddTodo =>
      if buffer $== "" then (buffer, todos)
      else ("", (buffer, false)::todos)
    | RemoveTodo(idx) =>
      (buffer, List.filteri((fun i _ -> i != idx), todos))
    | ToggleTodo(idx) =>
      (buffer, List.mapi((fun i todo -> if i == idx then (fst(todo), !snd(todo)) else todo), todos))
    | UpdateBuffer(new_buffer) =>
      (new_buffer, todos)
    end