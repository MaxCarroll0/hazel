# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | UpdatePassword(password) => update_password(model, password)
  | ClearCriteria => clear_criteria(model)
  | AddCriterion(criteria) => add_criterion(model, criteria)
  | RemoveCriterion(criteria) => remove_criterion(model, criteria)
  end
in