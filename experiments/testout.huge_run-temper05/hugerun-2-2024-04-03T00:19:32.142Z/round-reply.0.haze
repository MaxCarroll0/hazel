fun (model, action) ->
  case action
  | AddTodo => let (buffer, todos) = model in (buffer, Todo.add(buffer, todos))
  | RemoveTodo(idx) => let (buffer, todos) = model in (buffer, Todo.remove(idx, todos))
  | ToggleTodo(idx) => let (buffer, todos) = model in (buffer, Todo.toggle(idx, todos))
  | UpdateBuffer(new_buffer) => let (_, todos) = model in (new_buffer, todos)
  end