fun (model, action) ->
  case action
  | AddTodo => let (buffer, todos) = model in (buffer, List.append(todos, [buffer]))
  | RemoveTodo(idx) => let (buffer, todos) = model in (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) => let (buffer, todos) = model in (buffer, List.update(idx, not (List.nth(todos, idx)), todos))
  | UpdateBuffer(new_buffer) => let (_, todos) = model in (new_buffer, todos)
  end