fun (model, action) ->
  case action
  | AddTodo => let (buffer, todos) = model in (buffer, todos @ [buffer])
  | RemoveTodo(idx) => let (buffer, todos) = model in (buffer, List.remove_at(idx, todos))
  | ToggleTodo(idx) => let (buffer, todos) = model in (buffer, List.map_at(idx, not, todos))
  | UpdateBuffer(new_buffer) => let (_, todos) = model in (new_buffer, todos)
  end