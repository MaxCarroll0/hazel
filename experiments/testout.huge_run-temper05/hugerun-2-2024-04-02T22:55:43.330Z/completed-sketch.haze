# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (buffer, todos), action ->
  case action
  | AddTodo => (buffer, todos ++ [(buffer, false)])
  | RemoveTodo(index) => (buffer, List.filteri((fun i, _ -> i != index), todos))
  | ToggleTodo(index) => (buffer, List.mapi((fun i, (t, done) -> if i == index then (t, !done) else (t, done)), todos))
  | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end
in
