# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (buffer, todos), action ->
    case action
    | AddTodo => (buffer, todos)
    | RemoveTodo(idx) => (buffer, List.remove(idx, todos))
    | ToggleTodo(idx) =>
        let toggle: Todo -> Todo = fun (desc, status) -> (desc, !status) in
        (buffer, List.update(idx, toggle, todos))
    | UpdateBuffer(str) => (str, todos)
    end
in
