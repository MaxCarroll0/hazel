# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => let (s, todos) = model in (s, add(model))
  | RemoveTodo(i) => let (s, todos) = model in (s, remove(i, todos))
  | ToggleTodo(i) => let (s, todos) = model in (s, toggle(i, todos))
  | UpdateBuffer(s) => let (_, todos) = model in (s, todos)
  end
in
