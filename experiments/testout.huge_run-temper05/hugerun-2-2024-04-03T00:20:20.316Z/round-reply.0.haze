fun (model, action) ->
  case action
  | AddTodo => (model.buffer, model.todos ++ [Todo.init(model.buffer, false)])
  | RemoveTodo(idx) => (model.buffer, List.remove_at(idx, model.todos))
  | ToggleTodo(idx) => (model.buffer, List.map_at(idx, Todo.toggle, model.todos))
  | UpdateBuffer(str) => (str, model.todos)
  end