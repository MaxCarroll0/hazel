# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | Draw(x, y) => {model with canvas = draw(model.canvas, x, y)}
  | Clear => {model with canvas = clear()}
  | SetEmoji(emoji) => {model with currentEmoji = emoji}
  | Undo => {model with canvas = undo(model.canvas)}
  end
in
