# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun model, action ->
    case action
    | AddTrack(track) => model.tracks @ [track]
    | RemoveTrack(track) => List.filter(fun t -> t != track, model.tracks)
    | ClearPlayList => {model with tracks = []}
    end
in