# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
    case action
    | Draw(emoji) => {model with current_emoji = emoji}
    | Clear => {model with canvas = []}
    | AddToCanvas(point) => {model with canvas = (model.current_emoji, point)::model.canvas}
    end
in
