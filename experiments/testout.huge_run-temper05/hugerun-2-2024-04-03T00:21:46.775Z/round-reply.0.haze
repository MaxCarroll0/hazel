fun (model, action) ->
  case action
  | AddTodo => 
      let (buffer, todos) = model in
      (buffer, Todo(buffer)::todos)
  | RemoveTodo(idx) => 
      let (buffer, todos) = model in
      (buffer, List.remove_at(idx, todos))
  | ToggleTodo(idx) =>
      let (buffer, todos) = model in
      (buffer, List.update_at(idx, Todo.toggle, todos))
  | UpdateBuffer(str) =>
      let (buffer, todos) = model in
      (str, todos)
  end
end