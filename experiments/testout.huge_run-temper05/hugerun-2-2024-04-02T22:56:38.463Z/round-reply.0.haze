fun model, action ->
  case action
  | AddTodo => let (buffer, todos) = model in (String.empty, (buffer, false)::todos)
  | RemoveTodo(idx) => let (buffer, todos) = model in (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) => let (buffer, todos) = model in (buffer, List.map(fun (todo, done) -> if idx == todo then (todo, !done) else (todo, done), todos))
  | UpdateBuffer(new_buffer) => let (_, todos) = model in (new_buffer, todos)
  end