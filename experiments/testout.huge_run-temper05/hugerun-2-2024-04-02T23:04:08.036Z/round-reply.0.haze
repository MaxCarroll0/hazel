fun model, action ->
  case action
  | Toggle(i) => {model with todos = toggle(i, model.todos)}
  | Remove(i) => {model with todos = remove(i, model.todos)}
  | Add => {model with todos = add(model)}
  | Edit(i, s) => {model with todos = List.mapi(fun idx, todo -> if idx == i then {todo with title = s} else todo, model.todos)}
  | SetFilter(filter) => {model with filter = filter}
  end