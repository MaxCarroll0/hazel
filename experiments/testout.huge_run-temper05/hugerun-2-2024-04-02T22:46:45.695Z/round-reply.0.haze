fun (buffer, todos), action ->
    case action
    | AddTodo => if buffer $== "" then (buffer, todos) else ("", (buffer, false)::todos)
    | RemoveTodo(idx) => (buffer, List.remove(idx, todos))
    | ToggleTodo(idx) => 
        let (description, status) = List.nth(idx, todos) in
        (buffer, List.update(idx, (description, !status), todos))
    | UpdateBuffer(new_buffer) => (new_buffer, todos)
    end