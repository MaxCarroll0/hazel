# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  
fun model, action ->
  case action
  | AddTrack(track) => PlayList.addTrack(model, track)
  | RemoveTrack(track) => PlayList.removeTrack(model, track)
  | Play => PlayList.play(model)
  | Pause => PlayList.pause(model)
  | Next => PlayList.next(model)
  | Previous => PlayList.previous(model)
  end
in