
fun model, action ->
    case action
    | UpdatePassword(new_password) => (new_password, model.1, check_strength(new_password, model.1))
    | ClearCriteria => (model.0, [], Weak)
    | AddCriterion(new_criterion) => (model.0, new_criterion::model.1, check_strength(model.0, new_criterion::model.1))
    | RemoveCriterion(old_criterion) => (model.0, List.filter((!=) old_criterion, model.1), check_strength(model.0, List.filter((!=) old_criterion, model.1)))
    end