# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | CheckIn(id) => { model with bookings = List.append(model.bookings, [id]) }
  | CheckOut(id) => { model with bookings = List.filter((fun x -> x != id), model.bookings) }
  end
in
