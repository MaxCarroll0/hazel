# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
    | SelectEmoji(emoji) => (emoji, model[1])
    | StampEmoji(row, col) =>
      let updated_grid = updateGrid(model[0], row, col, model[1]) in
      (model[1], updated_grid)
    | FillRow(row) =>
      let updated_grid = List.map (fun _ -> model[1]) model[0][row] in
      (model[1], updated_grid)
  end
in
