fun model, action ->
  case action
  | UpdatePassword(password) => (password, model.1, calculateStrength(password, model.1))
  | ClearCriteria => (model.0, [], strength_of(0))
  | AddCriterion(criterion) => (model.0, criterion::model.1, calculateStrength(model.0, criterion::model.1))
  | RemoveCriterion(criterion) => 
    let newCriteria = List.filter(fun c -> c != criterion, model.1) in
    (model.0, newCriteria, calculateStrength(model.0, newCriteria))
  end