# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
    | AddTodo => Model.add_todo(model)
    | RemoveTodo(idx) => Model.remove_todo(idx, model)
    | ToggleTodo(idx) => Model.toggle_todo(idx, model)
    | UpdateBuffer(str) => Model.update_buffer(str, model)
  end
in