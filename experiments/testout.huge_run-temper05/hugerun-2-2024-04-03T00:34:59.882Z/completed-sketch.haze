# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | ChangePassword(password) => { model with password = password }
  | ToggleShowPassword => { model with show_password = not model.show_password }
  | SetStrength(strength) => { model with strength = strength }
  end
in