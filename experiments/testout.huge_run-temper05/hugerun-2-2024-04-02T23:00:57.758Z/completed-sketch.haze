# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | AddTodo => (model.1, (model.2, false)::model.3)
  | RemoveTodo(idx) => (model.1, List.remove_at(idx, model.3))
  | ToggleTodo(idx) => (model.1, List.mapi(fun i, (t, d) -> if i == idx then (t, !d) else (t, d), model.3))
  | UpdateBuffer(text) => (text, model.3)
  end
in
