# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | SetRoom(room) => { model with room = room }
  | SetDate(date) => { model with date = date }
  | SetTime(time) => { model with time = time }
  | Submit => { model with submitted = true } end
in
