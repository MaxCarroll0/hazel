# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | Draw(row, col, emoji) => 
    let new_grid = updateGrid(model.grid, row, col, emoji) in
    {model with grid = new_grid}
  | FillRow(row, emoji) => 
    let new_grid = fillRowInGrid(model.grid, row, emoji) in
    {model with grid = new_grid}
  | Clear => 
    let new_grid = clearGrid(model.grid) in
    {model with grid = new_grid}
  end
in
