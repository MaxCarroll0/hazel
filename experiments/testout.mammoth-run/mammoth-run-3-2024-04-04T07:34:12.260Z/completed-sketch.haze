# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  
fun m, a ->
  case a
  | AddTodo => let (buffer, todos) = m in (buffer, add(m))
  | RemoveTodo(id) => let (buffer, todos) = m in (buffer, remove(id, todos))
  | ToggleTodo(id) => let (buffer, todos) = m in (buffer, toggle(id, todos))
  | UpdateBuffer(str) => let (_, todos) = m in (str, todos)
  end
in
