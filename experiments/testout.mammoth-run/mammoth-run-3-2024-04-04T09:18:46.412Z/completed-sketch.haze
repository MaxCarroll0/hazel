# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | SelectEmoji(emoji) => (model.0, emoji, model.2)
  | StampEmoji((row, col)) => (stamp(model.0, model.1, row, col), model.1, model.2)
  | ClearCell((row, col)) => (clear_cell(model.0, row, col), model.1, model.2)
  | ClearGrid => (clear_grid(), model.1, model.2)
  | FillRow(row) => (fill_row(model.0, model.1, row), model.1, model.2)
  end
in
