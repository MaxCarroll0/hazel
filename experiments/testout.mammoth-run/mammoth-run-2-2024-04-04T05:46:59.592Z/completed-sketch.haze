# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddBooking(user, weekday, time) => addBooking(user, weekday, time, model)
  | RemoveBooking(id) => removeBooking(id, model)
  | UpdateBuffer(string) => updateBuffer(string, model)
  | ToggleBooking(id) => toggleBooking(id, model)
  end
in
