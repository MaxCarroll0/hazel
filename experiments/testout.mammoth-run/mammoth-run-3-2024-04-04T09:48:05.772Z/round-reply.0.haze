fun model, action ->
  case action
  | UpdatePassword(password) => (password, model.1, calculate_strength(password, model.1))
  | ClearCriteria => (model.0, [], Weak)
  | AddCriterion(criterion) => (model.0, criterion::model.1, calculate_strength(model.0, criterion::model.1))
  | RemoveCriterion(criterion) => (model.0, List.remove(criterion, model.1), calculate_strength(model.0, List.remove(criterion, model.1)))
  end