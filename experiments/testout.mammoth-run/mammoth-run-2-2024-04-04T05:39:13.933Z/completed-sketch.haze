# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  
fun model, action ->
  case action
  | AddSong(id) => {model with songs = id::get_songs(model)}
  | RemoveSong(id) => {model with songs = List.remove(id, get_songs(model))}
  | TogglePlay => {model with state = if get_state(model) == Playing then Paused else Playing}
  | SetVolume(v) => {model with volume = v}
  end
in