# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddEmoji(emoji) => {model with emojis = model.emojis @ [emoji]}
  | RemoveLastEmoji => {model with emojis = List.take(List.length(model.emojis) - 1, model.emojis)}
  | ClearAllEmojis => {model with emojis = []} 
  end
in
