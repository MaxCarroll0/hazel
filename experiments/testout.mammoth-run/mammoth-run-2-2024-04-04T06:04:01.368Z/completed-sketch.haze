# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | CheckIn(id) => { model with bookings = List.cons(id, model.bookings) }
  | CheckOut(id) => { model with bookings = List.filter(fun booking -> booking != id, model.bookings) }
  end
in
