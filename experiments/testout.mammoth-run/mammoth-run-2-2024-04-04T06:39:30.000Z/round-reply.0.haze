fun (model, action) ->
  case action
  | AddTodo =>
      let (buffer, todos) = model in
      (buffer, Todo(buffer, false)::todos)
  | RemoveTodo(idx) =>
      let (buffer, todos) = model in
      (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) =>
      let (buffer, todos) = model in
      (buffer, List.update(idx, fun todo -> Todo.toggle(todo), todos))
  | UpdateBuffer(new_buffer) =>
      let (buffer, todos) = model in
      (new_buffer, todos)
  end