
fun model, action ->
  case action
  | PlaySong(id) => (get_songs(model), Playing(id))
  | PauseCurrentSong => (get_songs(model), PausedOn(get_state(model)))
  | RemoveSong(id) => (List.remove(id, get_songs(model)), get_state(model))
  | AddSong(id) => (id::get_songs(model), get_state(model))
  end