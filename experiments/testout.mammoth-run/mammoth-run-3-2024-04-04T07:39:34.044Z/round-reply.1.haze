fun model, action ->
  case action
  | AddTodo => 
    let (buffer, todos) = model in 
    if buffer != "" then (buffer, (buffer, false)::todos) else model
  | RemoveTodo(idx) => 
    let (buffer, todos) = model in 
    (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) => 
    let (buffer, todos) = model in 
    (buffer, List.map(fun (idx', (s, b)) -> if idx' == idx then (s, !b) else (s, b), todos))
  | UpdateBuffer(s) => 
    let (buffer, todos) = model in 
    (s, todos)
  end