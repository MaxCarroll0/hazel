
fun model, action ->
  case action
  | AddTodo => 
    let (buffer, todos) = model in 
    if buffer != "" then (buffer, (buffer, false)::todos) else model
  | RemoveTodo(idx) => 
    let (buffer, todos) = model in 
    (buffer, List.remove_at(idx, todos))
  | ToggleTodo(idx) => 
    let (buffer, todos) = model in 
    (buffer, List.update_at(idx, fun (s, b) -> (s, !b), todos))
  | UpdateBuffer(s) => 
    let (buffer, todos) = model in 
    (s, todos)
  end
