# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | Draw(x, y, color) => { model with grid = Grid.set(x, y, color, model.grid) }
  | Clear => { model with grid = Grid.empty }
  | SetColor(color) => { model with color = color }
  end
in
