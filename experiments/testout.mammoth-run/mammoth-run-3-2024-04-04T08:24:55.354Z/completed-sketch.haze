# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
    | AddBooking(user, weekday, time) => addBooking(model, user, weekday, time)
    | RemoveBooking(bookingId) => removeBooking(model, bookingId)
    | UpdateBooking(bookingId, user, weekday, time) => updateBooking(model, bookingId, user, weekday, time)
    | NoOp => model
  end
in
