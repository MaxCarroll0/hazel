# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddTodo => add_todo(model)
  | RemoveTodo(index) => remove_todo(model, index)
  | ToggleTodo(index) => toggle_todo(model, index)
  | UpdateBuffer(new_buffer) => update_buffer(model, new_buffer)
  end
in