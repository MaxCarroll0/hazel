# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (model, action) ->
  case action
    | AddSong(song) => { model with songs = song :: model.songs }
    | RemoveSong(id) => { model with songs = List.filter(fun song -> song.id != id, model.songs) }
    | PlaySong(id) => { model with currentSong = Some(id) }
    | StopSong => { model with currentSong = None }
  end
in