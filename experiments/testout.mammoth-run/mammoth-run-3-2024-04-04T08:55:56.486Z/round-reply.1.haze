fun (grid, selectedEmoji), action ->
  case action
  | SelectEmoji(emoji) => (grid, emoji)
  | StampEmoji(row, col) =>
    let updated_grid = updateGrid(grid, row, col, selectedEmoji) in
    (updated_grid, selectedEmoji)
  | FillRow(row) =>
    let filled_grid = fillRow(grid, row, selectedEmoji) in
    (filled_grid, selectedEmoji)
  end