fun (buffer, todos), action ->
  case action
  | AddTodo => (buffer, todos @ [(buffer, false)])
  | RemoveTodo(i) => (buffer, List.take(i, todos) @ List.drop(i+1, todos))
  | ToggleTodo(i) => let (todo, done) = List.nth(todos, i) in (buffer, List.take(i, todos) @ [(todo, !done)] @ List.drop(i+1, todos))
  | UpdateBuffer(s) => (s, todos)
  end