
fun model, action ->
  case action
  | AddTodo => (model.1, (model.0, false)::model.1)
  | RemoveTodo(i) => (model.0, List.remove_at(i, model.1))
  | ToggleTodo(i) => (model.0, List.mapi(fun idx, todo -> if idx == i then (todo.0, !todo.1) else todo, model.1))
  | UpdateBuffer(s) => (s, model.1)
  end