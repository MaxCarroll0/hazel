# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
    case action
    | Toggle(id) => model.todos = toggle(id, model.todos); model
    | Remove(id) => model.todos = remove(id, model.todos); model
    | Add => model.todos = add(model); model
    end
in
