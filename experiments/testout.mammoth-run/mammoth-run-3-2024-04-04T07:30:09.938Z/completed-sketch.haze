# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => let (_, todos) = model in (Model.init, add(model))
  | RemoveTodo(id) => let (_, todos) = model in (Model.init, remove(id, todos))
  | ToggleTodo(id) => let (_, todos) = model in (Model.init, toggle(id, todos))
  | UpdateBuffer(s) => let (_, todos) = model in (s, todos)
  end
in
