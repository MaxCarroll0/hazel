# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (grid, current_emoji, available_emojis), action ->
  case action
  | SelectEmoji(new_emoji) => (grid, new_emoji, available_emojis)
  | StampEmoji(row, col) => updateGrid(grid, row, col, current_emoji), current_emoji, available_emojis
  end
in
