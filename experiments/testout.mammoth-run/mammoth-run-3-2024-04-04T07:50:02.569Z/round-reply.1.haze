fun (playlist, action) ->
  case action
  | PlaySong(id) => (playlist, Playing(id))
  | PauseCurrentSong => 
    case playlist
    | (_, PausedOn(id)) => (playlist, NoSongSelected)
    | _ => playlist
    end
  | RemoveSong(id) => 
    let new_playlist = List.filter(fun song_id -> song_id != id, playlist) in
    (new_playlist, NoSongSelected)
  | AddSong(id) => (id::playlist, Playing(id))
  end