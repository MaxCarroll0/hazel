
fun model, action ->
  case action
  | AddTodo => (fst(model), (fst(model), false)::snd(model))
  | RemoveTodo(idx) => (fst(model), List.remove_at(snd(model), idx))
  | ToggleTodo(idx) =>
      let (text, done) = List.nth(snd(model), idx) in
      (fst(model), List.update_at(snd(model), idx, (text, !done)))
  | UpdateBuffer(buffer) => (buffer, snd(model))
  end