# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (buffer, todos), action ->
  case action
  | AddTodo => if buffer != "" then (buffer, todos) else (buffer, todos)
  | RemoveTodo(index) => (buffer, List.remove(index, todos))
  | ToggleTodo(index) => (buffer, List.map_with_index(fun i, todo -> if i == index then Todo.toggle(todo) else todo, todos))
  | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end
in
