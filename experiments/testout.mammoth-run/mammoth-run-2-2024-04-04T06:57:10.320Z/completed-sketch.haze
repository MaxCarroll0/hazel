# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
    | UpdatePassword(password) => (password, model.1, model.2)
    | ClearCriteria => (model.0, [], model.2)
    | AddCriterion(criterion) => (model.0, criterion::model.1, model.2)
    | RemoveCriterion(criterion) => (model.0, List.remove(criterion, model.1), model.2)
  end
in