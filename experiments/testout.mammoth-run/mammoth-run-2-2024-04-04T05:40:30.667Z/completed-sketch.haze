# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun model, action ->
  case action
  | LoadPlayList(list) => list
  | AddTrack(track) => track::model
  | RemoveTrack(track) => List.filter(fun t -> t != track, model)
  | ClearPlayList => []
  end
in