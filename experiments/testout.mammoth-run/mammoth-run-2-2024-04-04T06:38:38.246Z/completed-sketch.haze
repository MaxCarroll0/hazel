# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | Draw(x, y) => updateCanvas(model.canvas, x, y, model.color)
  | SetColor(color) => { model with color = color }
  | Clear => { model with canvas = emptyCanvas() }
  end
in
