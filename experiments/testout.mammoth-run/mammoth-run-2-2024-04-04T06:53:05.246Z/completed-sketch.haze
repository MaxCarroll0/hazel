# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | ChangePassword(new_password) => {model with password = new_password; strength = calculateStrength(new_password, model.criteria)}
  | ChangeCriteria(new_criteria) => {model with criteria = new_criteria; strength = calculateStrength(model.password, new_criteria)}
  | Reset => initialModel
  end
in