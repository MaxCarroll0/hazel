let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
    | AddTodo => add_todo(model)
    | RemoveTodo(index) => remove_todo(index, model)
    | ToggleTodo(index) => toggle_todo(index, model)
    | UpdateBuffer(str) => update_buffer(str, model)
  end
in
