fun (model, action) ->
  case action
  | AddTodo =>
    let (buffer, todos) = model in
    ("", [buffer, false] :: todos)
  | RemoveTodo(idx) =>
    let (buffer, todos) = model in
    (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) =>
    let (buffer, todos) = model in
    (buffer, List.map_with_idx(fun i, (desc, done) -> if i == idx then (desc, !done) else (desc, done), todos))
  | UpdateBuffer(new_buffer) =>
    let (_, todos) = model in
    (new_buffer, todos)
  end