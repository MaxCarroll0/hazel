fun (model, action) ->
  case action
  | AddTodo =>
    let (buffer, todos) = model in
    ("", [buffer, false] :: todos)
  | RemoveTodo(idx) =>
    let (buffer, todos) = model in
    (buffer, List.remove_at(idx, todos))
  | ToggleTodo(idx) =>
    let (buffer, todos) = model in
    (buffer, List.update_at(idx, fun (desc, done) -> (desc, !done), todos))
  | UpdateBuffer(new_buffer) =>
    let (_, todos) = model in
    (new_buffer, todos)
  end