# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | ChangeBrush(emoji) => {model with brush = emoji}
  | PaintCell(row, col) => {model with grid = updateGrid(model.grid, row, col, model.brush)}
  | FillRow(row) => {model with grid = fillRowInGrid(model.grid, row, model.brush)}
  | Clear => {model with grid = clearGrid(model.grid)}
  end
in
