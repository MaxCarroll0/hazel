fun model, action ->
  case action
  | AddBooking((user, weekday, timeOfDay)) => 
      let (form, bookings, nextID) = model in
      (initFormState, (weekday, timeOfDay, user, nextID)::bookings, nextID + 1)
  | CancelBooking((user, bookingID)) => 
      let (form, bookings, nextID) = model in
      (form, rm_booking(user, bookingID, bookings), nextID)
  | ClearBookings => 
      (initFormState, [], 0)
  end