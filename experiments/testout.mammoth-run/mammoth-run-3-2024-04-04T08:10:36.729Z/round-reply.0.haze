
fun (playlist, action) ->
  case action
  | PlaySong(id) => (playlist.1, Playing(id))
  | PauseCurrentSong =>
    case playlist.2
    | Playing(id) => (playlist.1, PausedOn(id))
    | _ => playlist
    end
  | RemoveSong(id) => (List.filter((fun song_id -> song_id != id), playlist.1), playlist.2)
  | AddSong(id) => (id :: playlist.1, playlist.2)
  end