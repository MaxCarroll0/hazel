# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (buffer, todos), action ->
  case action
  | AddTodo => (buffer, (buffer, false)::todos)
  | RemoveTodo(i) => (buffer, List.remove_at(i, todos))
  | ToggleTodo(i) =>
      let (text, status) = List.nth(todos, i) in
      let updated_todos = List.remove_at(i, todos) in
      (buffer, updated_todos @ [(text, not status)])
  | UpdateBuffer(s) => (s, todos)
  end
in
