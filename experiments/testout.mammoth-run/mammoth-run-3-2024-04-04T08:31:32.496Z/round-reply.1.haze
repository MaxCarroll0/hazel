fun model, action ->
  case action
  | AddBooking(user, booking) => 
    let bookings = getBookings(model) in
    { model with
      bookings = rm_booking(user, booking.id, bookings) :: booking
    }
  | RemoveBooking(user, booking_id) =>
    let bookings = getUserBookings(model, user) in
    { model with
      bookings = rm_booking(user, booking_id, bookings)
    }
  | UpdateForm(form) =>
    { model with
      form = form
    }
  end