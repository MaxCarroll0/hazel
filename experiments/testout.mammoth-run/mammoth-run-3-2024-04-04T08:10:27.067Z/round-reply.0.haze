fun (playlist, action) ->
  case action
  | PlaySong(id) => (playlist.0, Playing(id))
  | PauseCurrentSong => 
    case playlist.1
    | Playing(id) => (playlist.0, PausedOn(id))
    | _ => playlist
  | RemoveSong(id) => 
    let new_playlist = List.filter(fun song_id -> song_id != id, playlist.0) in
    (new_playlist, playlist.1)
  | AddSong(id) => 
    let new_playlist = List.append(playlist.0, [id]) in
    (new_playlist, playlist.1)
  end