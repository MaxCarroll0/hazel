# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (playlist, action) ->
  case action
  | PlaySong(id) => (id::playlist.songList, Playing(id))
  | PauseCurrentSong => (playlist.songList, PausedOn(List.head(playlist.songList)))
  | RemoveSong(id) => (List.filter(fun song -> song != id, playlist.songList), playlist.state)
  | AddSong(id) => (id::playlist.songList, playlist.state)
  end
in