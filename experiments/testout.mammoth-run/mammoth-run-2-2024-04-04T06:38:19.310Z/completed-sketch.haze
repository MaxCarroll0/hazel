# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | SetColor(color) => { model with color = color }
  | SetTool(tool) => { model with tool = tool }
  | Clear => { model with canvas = empty_canvas }
  | Undo => { model with history = undo(model.history) }
  | Redo => { model with history = redo(model.history) }
  | Draw(x, y) => { model with canvas = draw(x, y, model.color, model.tool, model.canvas) }
  end
in
