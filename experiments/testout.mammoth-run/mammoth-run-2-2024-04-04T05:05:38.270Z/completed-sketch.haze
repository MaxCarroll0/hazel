# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun m, a ->
  case a
  | AddTodo => add(m)
  | RemoveTodo(i) => let (_, todos) = m in (fst m, remove(i, todos))
  | ToggleTodo(i) => let (_, todos) = m in (fst m, toggle(i, todos))
  | UpdateBuffer(s) => (s, snd m)
  end
in
