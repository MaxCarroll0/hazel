# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | SelectEmoji(emoji) => (emoji, snd(model))
  | StampEmoji(row, col) => 
    let updatedGrid = updateGrid(fst(model), row, col, fst(model))
    in (fst(model), updatedGrid)
  | FillRow(row) =>
    let updatedRow = List.map (fun _ -> fst(model)) (List.nth(fst(model), row))
    in (fst(model), List.update(row, updatedRow, fst(model)))
  end
in
