fun (current_playlist, action) ->
  case action
  | PlaySong(id) => (get_songs(current_playlist), Playing(id))
  | PauseCurrentSong => 
    case get_state(current_playlist) 
    | Playing(id) => (get_songs(current_playlist), PausedOn(id))
    | _ => current_playlist
    end
  | RemoveSong(id) => (List.filter(fun song_id -> song_id != id, get_songs(current_playlist)), get_state(current_playlist))
  | AddSong(id) => (id::get_songs(current_playlist), get_state(current_playlist))
  end