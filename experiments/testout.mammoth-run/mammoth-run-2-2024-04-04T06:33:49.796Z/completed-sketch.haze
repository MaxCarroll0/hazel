# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | ChangeTool(tool) => { model with tool = tool }
  | ChangeColor(color) => { model with color = color }
  | Draw(position) =>
      let new_drawings = { position = position; color = model.color; tool = model.tool } :: model.drawings in
      { model with drawings = new_drawings }
  end
in
