# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
    | AddBooking(user, weekday, time) =>
      let newBooking = (time, user, model.2 + 1) in
      if bookingExists(model, newBooking) then model
      else (model.0, model.1 @ [newBooking], model.2 + 1)
    | DeleteBooking(id) =>
      let bookings = List.filter(fun (_, _, bookingId) -> bookingId != id, model.1) in
      (model.0, bookings, model.2)
  end
in
