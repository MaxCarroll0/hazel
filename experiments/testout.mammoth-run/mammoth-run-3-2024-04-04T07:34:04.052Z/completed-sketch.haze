# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => add(model)
  | RemoveTodo(idx) => let (_, todos) = model in (Model.init, remove(idx, todos))
  | ToggleTodo(idx) => let (_, todos) = model in (Model.init, toggle(idx, todos))
  | UpdateBuffer(str) => let (_, todos) = model in (str, todos)
  end
in
