# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
    | AddTask => { todos = add(model) }
    | ToggleTask(idx) => { todos = toggle(idx, model.todos) }
    | RemoveTask(idx) => { todos = remove(idx, model.todos) }
  end
in
