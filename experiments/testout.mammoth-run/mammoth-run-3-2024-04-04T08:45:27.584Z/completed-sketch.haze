# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | BookRoom(room_id) => {model with bookings = room_id::model.bookings}
  | CancelBooking(room_id) => {model with bookings = List.filter((fun id -> id != room_id), model.bookings)}
  end
in
