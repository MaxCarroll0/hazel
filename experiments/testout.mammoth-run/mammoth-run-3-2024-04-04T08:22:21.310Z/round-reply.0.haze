fun model, action ->
    case action
    | AddBooking(user, weekday, time) => if !bookingExists(model, (time, user, Model.nextBookingId(model))) then model else addBooking(model, (time, user, Model.nextBookingId(model)))
    | RemoveBooking(id) => removeBooking(model, id)
    | UpdateForm(time, user) => updateForm(model, (time, user))
    end