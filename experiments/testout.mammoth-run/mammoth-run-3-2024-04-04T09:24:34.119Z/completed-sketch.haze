# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  
fun model, action ->
  case action
  | Draw(x, y, color) => { model with pixels = Pixels.add(x, y, color, model.pixels) }
  | Clear => { model with pixels = Pixels.create() }
  | Undo => { model with pixels = Pixels.undo(model.pixels) }
  end
in
