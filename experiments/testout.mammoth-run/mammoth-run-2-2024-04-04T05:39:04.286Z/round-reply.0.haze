fun model, action ->
  case action
  | AddSong(id) => 
      let new_songs = get_songs(model) :: id in
      PlayList(new_songs, get_state(model))
  | RemoveSong(id) =>
      let new_songs = List.filter(fun song_id -> song_id != id, get_songs(model)) in
      PlayList(new_songs, get_state(model))
  | Play => PlayList(get_songs(model), Playing)
  | Pause => PlayList(get_songs(model), Paused)
  | Stop => PlayList(get_songs(model), Stopped)
  end