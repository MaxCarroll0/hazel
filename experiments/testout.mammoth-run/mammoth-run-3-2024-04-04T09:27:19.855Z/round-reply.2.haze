fun (model, action) ->
  case action
  | AddTodo -> let (buffer, todos) = model in (buffer, Todo(buffer)::todos)
  | RemoveTodo(idx) -> let (buffer, todos) = model in (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) -> let (buffer, todos) = model in (buffer, List.map(fun todo, i -> if i == idx then Todo.toggle(todo) else todo, todos))
  | UpdateBuffer(new_buffer) -> let (_, todos) = model in (new_buffer, todos)
  end