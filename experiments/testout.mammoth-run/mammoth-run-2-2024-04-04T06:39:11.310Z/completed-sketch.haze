# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | SetColor(color) => {model with color}
  | SetEmoji(emoji) => {model with emoji}
  | AddEmoji(x, y) => {model with emojis = (x, y, model.emoji, model.color) :: model.emojis}
  | Clear => {model with emojis = []}
  end
in
