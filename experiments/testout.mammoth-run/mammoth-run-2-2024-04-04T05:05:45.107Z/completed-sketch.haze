# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | NoOp => model
  | Toggle(id) => { model with todos = toggle(id, model.todos) }
  | Delete(id) => { model with todos = remove(id, model.todos) }
  | Add => { model with todos = add(model) } 
  | UpdateNewTodoName(name) => { model with newTodoName = name }
  end
in
