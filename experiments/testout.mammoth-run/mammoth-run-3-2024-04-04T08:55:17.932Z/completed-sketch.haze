# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun ((grid, currentEmoji, emojis), action) ->
  case action
  | SelectEmoji(emoji) => (grid, emoji, emojis)
  | StampEmoji(row, col) => (updateGrid(grid, row, col, currentEmoji), currentEmoji, emojis)
  | FillRow(row) => (grid, currentEmoji, emojis) end
in
