fun (buffer, todos), action ->
  case action
  | AddTodo => (buffer, (buffer, false)::todos)
  | RemoveTodo(index) => (buffer, List.remove(index, todos))
  | ToggleTodo(index) => (buffer, List.map((fun (i, (task, done)) -> if i == index then (task, !done) else (task, done)), List.mapi((fun i todo -> (i, todo)), todos)))
  | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end