fun model, action ->
  let (buffer, todos) = model in
  case action
  | AddTodo => if buffer != "" then (buffer, todos @ [(buffer, false)]) else model
  | RemoveTodo(idx) => (buffer, List.filteri(fun i, _ -> i != idx, todos))
  | ToggleTodo(idx) => (buffer, List.mapi(fun i, (t, done) -> if i == idx then (t, !done) else (t, done), todos))
  | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end