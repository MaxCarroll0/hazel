
fun (buffer, todos), action ->
  case action
  | AddTodo => if buffer != "" then (buffer, (buffer, false) :: todos) else (buffer, todos)
  | RemoveTodo(i) => (buffer, List.remove(i, todos))
  | ToggleTodo(i) => 
    let toggled = case List.nth(i, todos) of 
      | None => None
      | Some((desc, status)) => Some((desc, !status)) end in
    (buffer, List.update(i, toggled, todos))
  | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end