fun (playlist, action) ->
    case action
    | PlaySong(id) => (playlist[0], Playing(id))
    | PauseCurrentSong => 
        let (_, playlistState) = playlist in
        (playlist[0], PausedOn(playlistState))
    | RemoveSong(id) => 
        let (songList, playlistState) = playlist in
        (List.filter(fun song -> song != id, songList), playlistState)
    | AddSong(id) => 
        let (songList, playlistState) = playlist in
        (id::songList, playlistState)
    end