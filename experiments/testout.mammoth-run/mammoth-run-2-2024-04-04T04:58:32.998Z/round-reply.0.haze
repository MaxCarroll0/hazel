fun (buffer, todos), action ->
  case action
  | AddTodo => if buffer $== "" then (buffer, todos) else ("", (buffer, false)::todos)
  | RemoveTodo(index) => (buffer, List.remove(index, todos))
  | ToggleTodo(index) => (buffer, List.update(index, fun (desc, status) -> (desc, !status), todos))
  | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end