# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => (model.0, (model.0, false) :: model.1)
  | RemoveTodo(i) => (model.0, List.remove_at(i, model.1))
  | ToggleTodo(i) =>
    let todos = model.1 in
    let (title, completed) = List.nth(todos, i) in
    (model.0, List.update_at(i, (title, !completed), todos))
  | UpdateBuffer(buffer) => (buffer, model.1)
  end
in
