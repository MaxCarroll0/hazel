# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | BookRoom(room_id) => {model with room_status = Booking(room_id)}
  | CancelBooking => {model with room_status = Available}
  | ConfirmBooking => {model with room_status = Booked}
  end
in
