fun model, action ->
    case action
    | AddTodo => let new_todos = add(model) in (fst(model), new_todos)
    | RemoveTodo(idx) => let (_, todos) = model in (fst(model), remove(idx, todos))
    | ToggleTodo(idx) => let (_, todos) = model in (fst(model), toggle(idx, todos))
    | UpdateBuffer(str) => (str, snd(model))
    end