# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
    case action
    | ChangePassword(password) => {model with password = password}
    | TogglePasswordVisibility => {model with show_password = not model.show_password}
    | ToggleScoreVisibility => {model with show_score = not model.show_score}
    end
in