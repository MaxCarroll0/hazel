fun model, action ->
    case action
    | AddBooking(user, weekday, timeOfDay) =>
        let newBooking = ((weekday, timeOfDay), user, List.length(model.2)) in
        ((model.1, newBooking::model.2, model.3 + 1))
    | CancelBooking(user, id) =>
        let newBookings = List.filter(fun booking -> booking.3 != id, model.2) in
        ((model.1, newBookings, model.3))
    | ClearBookings =>
        ((model.1, [], model.3))
    end