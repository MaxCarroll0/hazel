fun model, action ->
  case action
  | Click(row, col) => let new_grid = updateGrid(model.grid, row, col, model.emoji) in
                       {emoji = model.emoji, grid = new_grid}
  | SelectEmoji(emoji) => {emoji = emoji, grid = model.grid}
  | Clear => let new_grid = clearGrid(model.grid) in
              {emoji = model.emoji, grid = new_grid}
  | FillRow(row) => let new_grid = fillRowInGrid(model.grid, row, model.emoji) in
                    {emoji = model.emoji, grid = new_grid}
  end