
fun model, action ->
  case action
  | Click(row, col) => let new_grid = updateGrid(model.grid, row, col, model.emoji) in
                       {model with grid = new_grid}
  | SelectEmoji(emoji) => {model with emoji = emoji}
  | Clear => {model with grid = clearGrid(model.grid)}
  | FillRow(row) => let new_grid = fillRowInGrid(model.grid, row, model.emoji) in
                    {model with grid = new_grid}
  end