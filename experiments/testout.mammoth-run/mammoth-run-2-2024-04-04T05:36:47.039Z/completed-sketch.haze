# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (model, action) ->
  case action
  | AddSong(song) => model.songs :: [song]
  | RemoveSong(song) => List.filter(fun s -> s != song, model.songs)
  | ClearPlaylist => {model with songs = []}
  end
in