fun (grid, current_emoji, emoji_list), action ->
  case action
  | SelectEmoji(new_emoji) => (grid, new_emoji, emoji_list)
  | StampEmoji((row, col)) => (update_grid(current_emoji, (row, col), grid), current_emoji, emoji_list)
  | ClearCell((row, col)) => (update_grid("", (row, col), grid), current_emoji, emoji_list)
  | ClearGrid => (empty_grid(), current_emoji, emoji_list)
  | FillRow(row) => (fill_row(current_emoji, row, grid), current_emoji, emoji_list)
  end