# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (model, action) ->
    case action
    | PlayListAction.Add(track) => PlayList(model.tracks @ [track])
    | PlayListAction.Remove(track) => PlayList(List.filter((fun t -> t != track), model.tracks))
    | PlayListAction.Clear => PlayList([])
    end
in