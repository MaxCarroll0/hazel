fun (buffer, todos), action ->
  case action
  | AddTodo => (buffer, (buffer, false) :: todos)
  | RemoveTodo(idx) =>
    let todos = List.filteri((i, _) -> i != idx, todos) in
    (buffer, todos)
  | ToggleTodo(idx) =>
    let todos = List.mapi((i, (title, done)) -> if i == idx then (title, !done) else (title, done), todos) in
    (buffer, todos)
  | UpdateBuffer(newBuffer) => (newBuffer, todos)
  end