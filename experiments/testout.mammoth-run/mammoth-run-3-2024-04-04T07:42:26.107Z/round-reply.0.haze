fun model, action ->
  case action
  | AddTodo => (model.1, (model.0, false) :: model.1)
  | RemoveTodo(idx) => (model.0, List.remove_at(idx, model.1))
  | ToggleTodo(idx) =>
    let (title, done) = List.nth(idx, model.1) in
    (model.0, List.set_at(idx, (title, !done), model.1))
  | UpdateBuffer(buffer) => (buffer, model.1)
  end