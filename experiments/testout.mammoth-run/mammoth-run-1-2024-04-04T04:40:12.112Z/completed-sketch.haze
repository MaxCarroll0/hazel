# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (playlist, action) ->
  case action
  | PlaySong(id) => update_playlist_with_song(playlist, id)
  | PauseCurrentSong => pause_current_song_in_playlist(playlist)
  | RemoveSong(id) => remove_song_from_playlist(playlist, id)
  | AddSong(id) => add_song_to_playlist(playlist, id)
  end
in