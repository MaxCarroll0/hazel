# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
    case action
    | AddBooking(user, weekday, timeofday) => (user, weekday, timeofday)::model
    | CancelBooking(user, id) => List.filter (fun (time, user, id') -> id' != id) model
    | ClearBookings => []
    end
in
