# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (buffer, todos), action ->
  case action
    | AddTodo => ("" , todos ++ [(buffer, false)])
    | RemoveTodo(idx) => (buffer, List.remove(idx, todos))
    | ToggleTodo(idx) =>
      let (d, s) = List.nth(idx, todos) in
      (buffer, List.update(idx, (d, !s), todos))
    | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end
in
