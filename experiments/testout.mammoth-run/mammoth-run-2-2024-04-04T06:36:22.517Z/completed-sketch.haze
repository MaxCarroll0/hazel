# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | Draw(emoji, pos) => { model with canvas = Canvas.draw(emoji, pos, model.canvas) }
  | ClearCanvas => { model with canvas = Canvas.empty() }
  | ChangeBrush(emoji) => { model with brush = emoji }
  end
in
