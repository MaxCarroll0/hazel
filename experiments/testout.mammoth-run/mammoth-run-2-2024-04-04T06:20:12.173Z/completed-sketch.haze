# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
    | Clear => {model with grid = clearGrid(model.grid)}
    | Set(row, col, emoji) => {model with grid = updateGrid(model.grid, row, col, emoji)}
    | Fill(row, emoji) => {model with grid = fillRowInGrid(model.grid, row, emoji)}
  end
in
