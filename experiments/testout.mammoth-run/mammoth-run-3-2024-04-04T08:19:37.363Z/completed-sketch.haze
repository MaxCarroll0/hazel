# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddBooking(user, weekday, id) => if bookingExists(model, (weekday, user, id)) then model else addBooking(model, (weekday, user, id))
  | RemoveBooking(id) => removeBookingById(model, id)
  | UpdateFormData(newData) => updateFormData(model, newData)
  end
in
