# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun model, action ->
  case action
    | AddSong(song) => AddSong(song) :: model
    | RemoveSong(song) => List.filter(fun s -> s != RemoveSong(song), model)
    | Shuffle => Shuffle :: model
  end
in