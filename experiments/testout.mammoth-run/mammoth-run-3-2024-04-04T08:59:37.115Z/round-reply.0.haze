fun model, action ->
  let (grid, selectedEmoji, palette) = model in
  case action
  | SelectEmoji(emoji) => (grid, emoji, palette)
  | StampEmoji((row, col)) => (updateGrid(grid, row, col, selectedEmoji), selectedEmoji, palette)
  | ClearCell((row, col)) => (updateGrid(grid, row, col, ""), selectedEmoji, palette)
  | ClearGrid => (clearGrid(grid), selectedEmoji, palette)
  | FillRow(row) => (fillRowInGrid(grid, row, selectedEmoji), selectedEmoji, palette)
  end