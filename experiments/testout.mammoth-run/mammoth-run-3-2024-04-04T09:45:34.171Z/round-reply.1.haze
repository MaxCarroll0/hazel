fun (model, action) ->
  let (password, criteria, strength) = model in
  case action
  | UpdatePassword(new_password) => (new_password, criteria, strength)
  | ClearCriteria => (password, [], strength)
  | AddCriterion(new_criterion) => (password, new_criterion::criteria, strength)
  | RemoveCriterion(to_remove) => (password, List.filter(fun c -> c != to_remove, criteria), strength)
  end