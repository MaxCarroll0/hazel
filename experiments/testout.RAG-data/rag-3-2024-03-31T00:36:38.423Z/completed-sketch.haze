# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | SelectEmoji(emoji) =>
    let (grid, _, available) = model in
    (grid, emoji, available)
  | StampEmoji(row, col) =>
    let (grid, emoji, _) = model in
    updateGrid(grid, row, col, emoji)
  | FillRow(row) =>
    let (grid, emoji, _) = model in
    fillRow(grid, row, emoji)
  end
in
