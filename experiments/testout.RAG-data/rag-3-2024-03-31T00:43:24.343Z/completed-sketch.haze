# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (password, criteria, strength), action ->
  case action
    | AddCriterion(c) => (password, c::criteria, strength)
    | RemoveCriterion(index) => (password, List.remove_at(index, criteria), strength)
    | UpdatePassword(p) => (p, criteria, strength)
    | CalculateStrength => (password, criteria, calculate_password_strength(password, criteria)) 
  end
in