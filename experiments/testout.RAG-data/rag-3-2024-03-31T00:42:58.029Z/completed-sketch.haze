# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (password, criteria, strength), action ->
case action
| ChangePassword(new_password) => 
  let new_strength = calculate_strength(new_password, criteria) in 
    (new_password, criteria, new_strength)
| AddCriterion(new_criterion) => 
  let new_strength = calculate_strength(password, criteria @ [new_criterion]) in 
    (password, criteria @ [new_criterion], new_strength)
end
in