# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  
fun (buffer, todos), action ->
  case action
    | AddTodo => if List.length(buffer) == 0 then (buffer, todos) else ("", (buffer, false)::todos)
    | RemoveTodo(idx) => (buffer, remove(idx, todos))
    | ToggleTodo(idx) => (buffer, List.mapi(fun i, (desc, status) -> if i == idx then (desc, !status) else (desc, status), todos))
    | UpdateBuffer(new_buffer) => (new_buffer, todos)
  end
in
