fun (password, criteria, strength), action ->
  case action
  | AddTodo =>
      (password, criteria, strength)
  | RemoveTodo(idx) =>
      (password, List.remove_at(idx, criteria), strength)
  | ToggleTodo(idx) =>
      (password, criteria, strength)
  | UpdateBuffer(new_password) =>
      (new_password, criteria, strength)
  end