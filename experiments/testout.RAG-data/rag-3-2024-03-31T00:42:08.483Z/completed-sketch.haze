# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => add_todo(model)
  | RemoveTodo(idx) => remove_todo(idx, model)
  | ToggleTodo(idx) => toggle_todo(idx, model)
  | UpdateBuffer(str) => update_buffer(str, model)
  end
in