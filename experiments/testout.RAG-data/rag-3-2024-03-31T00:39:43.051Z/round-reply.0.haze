
fun (model, action) ->
  case action
  | AddTodo =>
    let (buffer, todos) = model in
    if buffer == "" then model else (buffer, Todo(buffer, false)::todos)
  | RemoveTodo(idx) =>
    let (buffer, todos) = model in
    (buffer, List.remove(idx, todos))
  | ToggleTodo(idx) =>
    let (buffer, todos) = model in
    (buffer, List.map(fun (i, todo) -> if i == idx then Todo.toggle(todo) else todo, todos))
  | UpdateBuffer(str) =>
    let (_, todos) = model in
    (str, todos)
  end