# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (grid, selected_emoji, available_emojis), action ->
  case action 
  | SelectEmoji(new_emoji) => (grid, new_emoji, available_emojis)
  | StampEmoji(row, col) => (updateGrid(grid, row, col, selected_emoji), selected_emoji, available_emojis)
  | FillRow(row) => (fillRow(grid, row, selected_emoji), selected_emoji, available_emojis)
  end
in
