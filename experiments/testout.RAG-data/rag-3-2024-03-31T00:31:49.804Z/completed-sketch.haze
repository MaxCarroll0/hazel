# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun model, action ->
    case action
    | PlaySong(id) => (id::model[0], Playing(id))
    | PauseCurrentSong => 
        case model[1]
        | Playing(id) => (model[0], PausedOn(id))
        | NoSongSelected => model
        | PausedOn(id) => model
    | RemoveSong(id) => (List.filter(fun song -> song != id, model[0]), model[1])
    | AddSong(id) => (id::model[0], model[1])
    end
in