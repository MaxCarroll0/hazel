# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
    case action
    | AddBooking(user, weekday, time) => 
        let booking = (time, user, 0) in
        if not (bookingExists(model, booking)) 
        then addBooking(model, booking)
        else model
    | RemoveBooking(booking) =>
        if bookingExists(model, booking) 
        then removeBooking(model, booking)
        else model
    end
in
