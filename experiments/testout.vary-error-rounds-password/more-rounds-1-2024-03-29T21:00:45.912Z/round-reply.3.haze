fun (model, action) ->
    let (password, criteria, strength) = model in
    case action
    | UpdatePassword(new_password) => (new_password, criteria, strength) 
    | ClearCriteria => (password, [], strength)
    | AddCriterion(criterion) => (password, criterion :: criteria, strength)
    | RemoveCriterion(criterion) => (password, List.filter(fun c -> c != criterion, criteria), strength)
    end