
fun playList, action ->
    case action
    | Play => { playList with status = Playing }
    | Pause => { playList with status = Paused }
    | Stop => { playList with status = Stopped, track = 0 }
    | Prev => { playList with track = max 0 (playList.track - 1) }
    | Next => { playList with track = min (List.length playList.tracks - 1) (playList.track + 1) }
    end