fun model, action ->
  case action
  | AddTodo => (model.buffer, (model.buffer, false)::model.todos)
  | RemoveTodo(idx) => (model.buffer, List.remove_at(idx, model.todos))
  | ToggleTodo(idx) => (model.buffer, List.mapi(fun i, (t, done) -> if i == idx then (t, not done) else (t, done), model.todos))
  | UpdateBuffer(s) => (s, model.todos)
  end