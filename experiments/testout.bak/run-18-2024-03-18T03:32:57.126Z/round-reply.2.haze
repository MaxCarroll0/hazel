fun (model, action) ->
  case action
  | AddTodo => let (buffer, todos) = model in (buffer, (buffer, false)::todos)
  | RemoveTodo(index) => let (buffer, todos) = model in (buffer, List.filter(fun (_, idx) -> idx != index, todos))
  | ToggleTodo(index) =>
    let (buffer, todos) = model in 
    let update_todo = fun ((text, done), i) -> if i == index then (text, not(done)) else (text, done)
    in (buffer, List.mapi(update_todo, todos))
  | UpdateBuffer(new_buffer) => let (_, todos) = model in (new_buffer, todos)
  end