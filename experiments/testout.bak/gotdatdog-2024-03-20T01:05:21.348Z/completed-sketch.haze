let update: (Model, Action) -> Model =
  fun (model, action) ->
    let (password, criteria, strength) = model in
        case action
        | UpdatePassword(newPassword) => (newPassword, criteria, strength)
        | ClearCriteria => (password, [], strength)
        | AddCriterion(newCriterion) => (password, newCriterion::criteria, strength)
        | RemoveCriterion(criterionToRemove) => (password, List.filter(fun c -> c != criterionToRemove, criteria), strength)
        end
in