
fun playlist, action ->
  case playlist, action
  | (songs, state), PlaySong(id) => (songs, Playing(id))
  | (songs, state), PauseCurrentSong => (songs, case state of Playing(id) => PausedOn(id) | _ => state end)
  | (songs, state), RemoveSong(id) => (List.filter(fun song -> song != id, songs), state)
  | (songs, state), AddSong(id) => (songs@ [id], state)
  end
