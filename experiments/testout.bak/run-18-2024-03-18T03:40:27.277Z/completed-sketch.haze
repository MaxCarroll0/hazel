# Update playlist based on action #
let update: (PlayList, PlayListAction) -> PlayList =
  
fun (playlist, action) ->
case action
| PlaySong(id) => (fst(playlist), Playing(id))
| PauseCurrentSong => (fst(playlist), case snd(playlist) 
      | Playing(id) => PausedOn(id)
      | _ => snd(playlist) end)
| RemoveSong(id) => (List.filter(fun x -> x != id, fst(playlist)), snd(playlist))
| AddSong(id) => (id::fst(playlist), snd(playlist)) end
in