# Update playlist based on action #
let update: (PlayList, PlayListAction) -> PlayList =
  fun (playlist, action) ->
  case action
  | PlaySong(id) => ([id], Playing(id))
  | PauseCurrentSong => 
      case snd(playlist)
      | Playing(id) => (fst(playlist), PausedOn(id))
      | _ => playlist
      end
  | RemoveSong(id) => (List.filter((fun x -> x <> id), fst(playlist)), snd(playlist))
  | AddSong(id) => (id::fst(playlist), snd(playlist)) 
  end
in