# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddEmoji(emoji, row, col) =>  { model with grid = updateGrid(model.grid, row, col, emoji) }
  | FillRow(emoji, row) =>  { model with grid = fillRowInGrid(model.grid, row, emoji) }
  | Clear => { model with grid = clearGrid(model.grid) }
  end
in
