fun model, action ->
  case action of
  | UpdatePassword(password) => 
    let new_model = {model with password = password} in
    {new_model with strength = calculateStrength(password, model.criteria)}
  | UpdateCriteria(criteria) =>
    let new_model = {model with criteria = criteria} in
    {new_model with strength = calculateStrength(model.password, criteria)}
  | UpdateStrength(strength) =>
    {model with strength = strength}
  end