# Update the Room Booking app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | Increment =>
      {count = model.count + 1}
  | Decrement =>
      if model.count > 0 then
        {count = model.count - 1}
      else
        model
  | Input input =>
      {count = String.toInt(input)}
  | Reset =>
      {count = 0}
  end
in
