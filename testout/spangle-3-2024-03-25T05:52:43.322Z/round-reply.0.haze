fun model, action ->
  case action
  | PlaySong(id) => (model[0], Playing(id))
  | PauseCurrentSong =>
    let state = model[1] in
    case state
    | Playing(id) => (model[0], PausedOn(id))
    | _ => model
    end
  | RemoveSong(id) => (List.filter(fun x -> x != id, model[0]), model[1])
  | AddSong(id) => (id::model[0], model[1])
  end