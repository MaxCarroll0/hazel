fun (grid, current_emoji, emoji_list), action ->
    case action
    | SelectEmoji(emoji) => (grid, emoji, emoji_list)
    | StampEmoji(row, col) => (Util.update_grid(grid, row, col, current_emoji), current_emoji, emoji_list)
    | ClearCell(row, col) => (Util.update_grid(grid, row, col, ""), current_emoji, emoji_list)
    | ClearGrid => (Util.empty_grid(), current_emoji, emoji_list)
    | FillRow(row) => (Util.fill_row(grid, row, current_emoji), current_emoji, emoji_list)
    end