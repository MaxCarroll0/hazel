fun (playlist, action) ->
  let (songs, state) = playlist in
  case action
    | PlaySong(id) => (songs, Playing(id))
    | PauseCurrentSong =>
      case state
      | Playing(id) => (songs, PausedOn(id))
      | _ => playlist
    end
    | RemoveSong(id) => (List.filter(fun s -> s != id, songs), state)
    | AddSong(id) => (id::songs, state)
  end