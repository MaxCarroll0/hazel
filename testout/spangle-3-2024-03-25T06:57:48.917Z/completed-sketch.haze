# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | UpdatePassword(new_password) => update_password(new_password, model)
  | ClearCriteria => clear_criteria(model)
  | AddCriterion(criteria) => add_criterion(criteria, model)
  | RemoveCriterion(criteria) => remove_criterion(criteria, model)
  end
in