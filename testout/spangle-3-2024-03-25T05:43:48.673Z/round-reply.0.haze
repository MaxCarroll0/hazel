
fun (playlist, action) ->
  let (songs, state) = playlist in
  case action
  | PlaySong(id) => (songs, Playing(id))
  | PauseCurrentSong => 
    case state 
    | Playing(id) => (songs, PausedOn(id))
    | _ => playlist
  | RemoveSong(id) => 
    (List.filter((fun song_id -> song_id != id), songs), state)
  | AddSong(id) => 
    (List.append(songs, [id]), state)
  end
