# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun playlist, action ->
  case action
    | Next -> List.next(playlist)
    | Previous -> List.previous(playlist)
    | Play -> Playlist.play(playlist)
    | Pause -> Playlist.pause(playlist)
    | Add(id) -> Playlist.add(playlist, id)
    | Delete(id) -> Playlist.delete(playlist, id)
  end
in