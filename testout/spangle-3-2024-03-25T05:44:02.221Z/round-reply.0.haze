
fun playlist, action ->
  case action
    | PlaySong(id) => (get_songs(playlist), Playing(id))
    | PauseCurrentSong => (get_songs(playlist), PausedOn(get_state(playlist)))
    | RemoveSong(id) => (List.filter_map(fun songid -> if(songid == id) then None else Some(songid), get_songs(playlist)), get_state(playlist))
    | AddSong(id) => (List.rev_append([id], get_songs(playlist)), get_state(playlist))
  end