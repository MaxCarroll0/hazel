# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | ClearGrid => model_init 
  | ChangeEmoji(emoji) => { model with emoji = emoji }
  | FillRow(row) => { model with grid = fillRowInGrid(model.grid, row, model.emoji) }
  | PlaceEmoji(row, col) => { model with grid = updateGrid(model.grid, row, col, model.emoji) }
  end
in
