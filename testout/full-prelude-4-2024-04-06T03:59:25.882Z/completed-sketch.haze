# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (model, action) ->
    case action
    | AddTodo => let (buffer, todos) = model in ("" , add(model))
    | RemoveTodo(index) => let (buffer, todos) = model in (buffer, remove(index, todos))
    | ToggleTodo(index) => let (buffer, todos) = model in (buffer, toggle(index, todos))
    | UpdateBuffer(str) => let (buffer, todos) = model in (str, todos)
    end

in
