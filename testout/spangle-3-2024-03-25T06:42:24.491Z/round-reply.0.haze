fun model, action ->
  case action
  | SetEmoji(emoji) => {model with current_emoji = emoji}
  | UpdateGrid(row, col) => let new_grid = updateGrid(model.grid, row, col, model.current_emoji) in {model with grid = new_grid}
  | FillRow(row, emoji) => let new_grid = fillRowInGrid(model.grid, row, emoji) in {model with grid = new_grid}
  | Clear => let new_grid = clearGrid(model.grid) in {model with grid = new_grid}
  end