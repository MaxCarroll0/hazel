fun model, action ->
  let songs, state = model in
  case action
  | PlaySong(id) => (songs, Playing(id))
  | PauseCurrentSong => 
    case state
    | Playing(id) => (songs, PausedOn(id))
    | _ => model
    end
  | RemoveSong(id) => (List.filter(fun song_id -> song_id != id, songs), state)
  | AddSong(id) => 
    if List.contains(id, songs) then model else (id::songs, state)
  end
in