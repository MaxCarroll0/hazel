# Update the EmojiPaint app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | SelectEmoji(emoji) => (model.1, emoji, model.3)
  | StampEmoji((row, col)) => 
    let stampedGrid = List.mapi(fun idx, row -> if idx == row then model.2 else row, model.1) in
    (stampedGrid, model.2, model.3)
  | ClearCell((row, col)) => ?? 
  | ClearGrid => ([[]], "", [])
  | FillRow(row) => ?? 
  end
in
