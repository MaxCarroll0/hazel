
fun (model, action) ->
    case action
    | AddBooking(user, weekday, timeofday) => let (form, bookings, id) = model in (form, (weekday, timeofday, user, id)::bookings, id + 1)
    | CancelBooking(user, bookingId) => let (form, bookings, id) = model in (form, List.filter((fun (_, _, bid) -> bid != bookingId), bookings), id)
    | ClearBookings => let (form, _, id) = model in (form, [], id)
    end