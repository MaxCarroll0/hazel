fun (password, criteria, strength), action ->
case action
| UpdatePassword(new_password) => (new_password, criteria, calculateStrength(new_password, criteria))
| AddCriterion(new_criterion) =>
    let updated_criteria = new_criterion :: criteria in
    (password, updated_criteria, calculateStrength(password, updated_criteria))
| RemoveCriterion(criterion_to_remove) => 
    let updated_criteria = List.filter(fun criterion -> criterion != criterion_to_remove, criteria) in
    (password, updated_criteria, calculateStrength(password, updated_criteria))
end