# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (model, action) ->
  case action
  | AddTodo => (fst(model), add(model))
  | RemoveTodo(index) => (fst(model), remove(index, snd(model)))
  | ToggleTodo(index) => (fst(model), toggle(index, snd(model)))
  | UpdateBuffer(text) => (text, snd(model))
  end
in
