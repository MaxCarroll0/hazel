# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun (model, action) -> 
  case action 
  | Init => initialModel
  | PasswordInput(p) =>
    let strength = calculateStrength(p, model.criteriaList) in
    {password = p, strength = strength, criteriaList = model.criteriaList}
  | AddCriteria(c) => 
    {password = model.password, criteriaList = c :: model.criteriaList, strength = model.strength}
  end
in