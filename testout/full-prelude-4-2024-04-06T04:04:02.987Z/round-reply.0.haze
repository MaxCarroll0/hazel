fun model, action ->
  case action
  | AddBooking(user, day, time) => 
      let (form, bookings, id) = model in
      let newBooking = ((day, time), user, id) in
      if bookingExists(model, newBooking) == false
      then ((day, time), user, id+1), newBooking::bookings, id+1
      else model 
  | CancelBooking(user, id) => 
      let (form, bookings, _) = model in
      (form, rm_booking(user, id, bookings), id)
  | ClearBookings => (initFormState, [], 0)
  end