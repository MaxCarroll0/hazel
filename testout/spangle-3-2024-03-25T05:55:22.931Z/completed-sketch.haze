# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun model, action ->
    case action
      | AddTrack(track) => model.tracks <- track :: model.tracks
      | RemoveTrack(track) => model.tracks <- List.filter(fun t -> t != track, model.tracks)
      | ResetPlayList => model.tracks <- []
    end
    model
in