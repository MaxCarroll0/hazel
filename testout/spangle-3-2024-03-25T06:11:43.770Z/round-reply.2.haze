fun (model, action) ->
  case action 
  | AddBooking(user, weekday, timeOfDay) => addBooking(model, (user, weekday, timeOfDay))
  | CancelBooking(user, id) => cancelBooking(model, (user, id))
  | ClearBookings => clearBookings(model) end
where 
addBooking: (Model, (User, Weekday, TimeOfDay)) -> Model = fun (_, _, _) -> model
cancelBooking: (Model, (User, Int)) -> Model = fun (_, _) -> model
clearBookings: Model -> Model = fun _ -> model