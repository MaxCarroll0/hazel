fun (playlist, action) ->
  case action of
  | PlaySong(id) => (get_songs(playlist), Playing(id))
  | PauseCurrentSong => (get_songs(playlist), NoSongSelected)
  | RemoveSong(id) => (List.filter_map(fun song_id -> if song_id != id then Some(song_id) else None end, get_songs(playlist)), get_state(playlist))
  | AddSong(id) => (List.concat_map(fun song_id -> [song_id], get_songs(playlist)), get_state(playlist))
  end