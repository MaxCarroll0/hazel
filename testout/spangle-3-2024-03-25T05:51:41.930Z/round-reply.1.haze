fun playlist, action ->
case action
| PlaySong(id) => (fst(playlist), Playing(id))
| PauseCurrentSong => (fst(playlist), case snd(playlist) with | Playing(id) => PausedOn(id) | _ => NoSongSelected end)
| RemoveSong(id) => (List.filter(fst(playlist), fun song -> song != id), snd(playlist))
| AddSong(id) => ([id]::fst(playlist), snd(playlist))
end