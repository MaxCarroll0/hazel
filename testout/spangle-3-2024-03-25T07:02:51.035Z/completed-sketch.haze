# Update Password Strength Checker app model based on an action #

let update: (Model, Action) -> Model =
  fun model, action -> 
    case action 
    | SetPassword(password) => { model | password = password, strength = calculateStrength(password, model.criterias)}
    | SetCriteria(criterias) => { model | criterias = criterias, strength = calculateStrength(model.password, criterias)}
    | Reset => initialModel
    end
in