fun (model, action) ->
  case action
  | UpdatePassword(new_password) => (new_password, model.1, calculate_strength(new_password, model.1))
  | ClearCriteria => (model.0, [], calculate_strength(model.0, []))
  | AddCriterion(criteria) => (model.0, List.append(model.1, [criteria]), calculate_strength(model.0, List.append(model.1, [criteria])))
  | RemoveCriterion(criteria) => (model.0, List.filter((fun c -> c != criteria), model.1), calculate_strength(model.0, List.filter((fun c -> c != criteria), model.1)))
  end