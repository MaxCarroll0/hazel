# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (playlist, action) ->
  case action
  | LoadPlaylist(target) => target
  | SortPlaylist => List.sort(compare, playlist)
  | ShufflePlaylist => List.shuffle(playlist)
  | AddSong(song) => song::playlist
  | RemoveSong(song) => List.filter(fun s -> s != song, playlist)
  end
in