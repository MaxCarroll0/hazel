fun model, action ->
  let (password, criteria, strength) = model in
  case action
  | UpdatePassword(new_password) => (new_password, criteria, check_strength(new_password, criteria))
  | ClearCriteria => (password, [], check_strength(password, []))
  | AddCriterion(criterion) => (password, criterion::criteria, check_strength(password, criterion::criteria))
  | RemoveCriterion(criterion) => let new_criteria = List.remove(criterion, criteria) in (password, new_criteria, check_strength(password, new_criteria))
  end
in
update(model, action)