fun (model, action) ->
    case model, action
    | (password, criteria, strength), UpdatePassword(new_pass) => (new_pass, criteria, strength)
    | (password, criteria, strength), ClearCriteria => (password, [], strength)
    | (password, criteria, strength), AddCriterion(criterion) => (password, criterion :: criteria, strength)
    | (password, criteria, strength), RemoveCriterion(criterion) => (password, List.filter(fun c -> c != criterion, criteria), strength)
    end