
fun (model, action) ->
  case model, action
  | (description, todos), AddTodo => (description, add(model))
  | (description, todos), RemoveTodo(index) => (description, remove(index, todos))
  | (description, todos), ToggleTodo(index) => (description, toggle(index, todos))
  | _, UpdateBuffer(new_description) => (new_description, todos)
  end
