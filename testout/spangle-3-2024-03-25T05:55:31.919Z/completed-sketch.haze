# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (model, action) ->
  case action
  | StartPlaying => {model with inPlay = true}
  | StopPlaying => {model with inPlay = false}
  | SetPlayCount(count) => {model with playCount = count}
  | AddSong(song) => {model with songs = song :: model.songs}
  | RemoveSong(song) => {model with songs = List.remove(song, model.songs)}
  end
in