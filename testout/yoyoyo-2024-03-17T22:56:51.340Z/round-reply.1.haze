fun (playlist, action) ->
  let (songs, state) = playlist in
  case action
  | PlaySong(id) => (songs, Playing(id))
  | PauseCurrentSong => (songs, match state with 
                                  | Playing(curr_id) => PausedOn(curr_id)
                                  | _ => NoSongSelected)
  | RemoveSong(id) => (List.filter(fun song_id -> song_id != id, songs), state)
  | AddSong(id) => (songs @ [id], state)
  end