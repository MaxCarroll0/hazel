fun model, action ->
  let songs, state = model in
  case action
  | PlaySong(id) => (songs, Playing(id))
  | PauseCurrentSong => 
    case state
    | Playing(id) => (songs, PausedOn(id))
    | _ => model
  | RemoveSong(id) => (List.filter(fun song -> song != id, songs), state)
  | AddSong(id) => 
    if List.member(id, songs)
    then model
    else (id::songs, state)
  end
