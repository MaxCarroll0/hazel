# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (model, action) ->
    let (buffer, todos) = model in
    case action
    | AddTodo => (buffer, add(buffer, todos))
    | RemoveTodo(i) => (buffer, remove(i, todos))
    | ToggleTodo(i) => (buffer, toggle(i, todos))
    | UpdateBuffer(str) => (str, todos)
    end
in
