fun m, a -> 
  case a
  | AddTodo =>
    let (buffer, todos) = m in
    if buffer == "" then m else (buffer, (buffer, false)::todos)
  | RemoveTodo(idx) =>
    let (buffer, todos) = m in
    (buffer, List.filteri((fun i _ -> i != idx), todos))
  | ToggleTodo(idx) =>
    let (buffer, todos) = m in
    (buffer, List.mapi((fun i (title, done) -> if i == idx then (title, !done) else (title, done)), todos))
  | UpdateBuffer(str) =>
    let (buffer, todos) = m in
    (str, todos)
  end