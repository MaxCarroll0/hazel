fun model, action ->
  case action
  | AddTodo => let (buffer, todos) = model in (buffer, (buffer, false)::todos)
  | RemoveTodo(index) => let (buffer, todos) = model in (buffer, List.remove(index, todos))
  | ToggleTodo(index) => 
    let (buffer, todos) = model in 
    let update_todo = fun (todo, i) -> if i == index then let (text, done) = todo in (text, not done) else todo in
    (buffer, List.mapi(update_todo, todos))
  | UpdateBuffer(new_buffer) => let (_, todos) = model in (new_buffer, todos)
  end