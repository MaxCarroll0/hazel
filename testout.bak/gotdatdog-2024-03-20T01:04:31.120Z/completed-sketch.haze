let update: (Model, Action) -> Model =
  fun (model, action) ->
    let (password, criteria, strength) = model in
    case action
    | UpdatePassword(new_password) => (new_password, criteria, strength)
    | ClearCriteria => (password, [], strength)
    | AddCriterion(new_criterion) => (password, criteria @ [new_criterion], strength)
    | RemoveCriterion(criteria_to_remove) => (password, List.filter((fun cri -> cri != criteria_to_remove), criteria), strength)
    end
in