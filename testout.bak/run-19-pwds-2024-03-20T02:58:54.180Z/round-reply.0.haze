
fun model, action ->
  case action
  | UpdatePassword(new_password) => (new_password, model._2, model._3)
  | ClearCriteria => (model._1, [], model._3)
  | AddCriterion(new_criterion) => (model._1, new_criterion :: model._2, model._3)
  | RemoveCriterion(criterion_to_remove) => (model._1, List.filter(fun c -> c != criterion_to_remove, model._2), model._3)
  end
