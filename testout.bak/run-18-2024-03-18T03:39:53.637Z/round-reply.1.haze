fun (playlist, action) ->
    case action 
    | PlaySong(id) => (fst(playlist), Playing(id))
    | PauseCurrentSong => (fst(playlist), match snd(playlist) with 
                                        | Playing(id) | PausedOn(id) => PausedOn(id)
                                        | NoSongSelected => NoSongSelected)
    | RemoveSong(id) => (List.filter(fun i -> not(i == id), fst(playlist)), snd(playlist))
    | AddSong(id) => (id::fst(playlist), snd(playlist))
    end