fun (playlist, action) ->
    case action
    | PlaySong(id) => (get_songs(playlist), Playing(id))
    | PauseCurrentSong => (get_songs(playlist), PausedOn(get_state(playlist)))
    | RemoveSong(id) => (List.filter(fun song -> song != id, get_songs(playlist)), get_state(playlist))
    | AddSong(id) => (get_songs(playlist) @ [id], get_state(playlist))
    end
