fun model, action ->
  case action
  | PlaySong(id) => (fst(model), Playing(id))
  | PauseCurrentSong => 
    case snd(model) of
    | Playing(id) => (fst(model), PausedOn(id))
    | _ => model
    end
  | RemoveSong(id) => 
    let new_playlist = List.filter(fun song_id -> song_id != id, fst(model)) in
    (new_playlist, snd(model))
  | AddSong(id) => 
    let new_playlist = id::fst(model) in
    (new_playlist, snd(model))
  end