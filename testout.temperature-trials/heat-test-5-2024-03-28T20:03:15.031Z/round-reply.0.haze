fun model, action ->
    case action
    | AddPlaylist(name) => model ++ [PlayList(name, [])]
    | RemovePlaylist(index) => List.remove_at (index, model)
    | AddSong(index, song) =>
        let playlist = List.nth(index, model) in
        PlayList.set_songs(playlist, PlayList.get_songs(playlist) ++ [song])
    | RemoveSong(playlistIndex, songIndex) =>
        let playlist = List.nth(playlistIndex, model) in
        PlayList.set_songs(playlist, List.remove_at(songIndex, PlayList.get_songs(playlist)))
    end