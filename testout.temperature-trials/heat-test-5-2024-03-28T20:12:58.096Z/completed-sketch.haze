# Update Playlist app model based on an action #

let update: (PlayList, PlayListAction) -> PlayList =
  fun (model, action) ->
    case action
    | AddTrack(track) => {model with tracks = track::model.tracks}
    | RemoveTrack(track) => {model with tracks = List.filter((!=) track, model.tracks)}
    | Play => {model with playing = true}
    | Pause => {model with playing = false}
    end
in