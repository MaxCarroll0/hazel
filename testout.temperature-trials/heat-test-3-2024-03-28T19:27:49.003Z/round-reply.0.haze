fun playlist, action ->
  case action
  | PlaySong(id) => (get_songs(playlist), Playing(id))
  | PauseCurrentSong => (get_songs(playlist), match get_state(playlist) with | Playing(id) => PausedOn(id) | _ => get_state(playlist) end)
  | RemoveSong(id) => (List.filter_map(fun song_id -> if song_id == id then None else Some(song_id), get_songs(playlist)), get_state(playlist))
  | AddSong(id) => (List.rev_append([id], get_songs(playlist)), get_state(playlist))
  end