fun (playlist, action) ->
  let (songs, state) = playlist in
  case action
  | PlaySong(id) => (songs, Playing(id))
  | PauseCurrentSong =>
    case state
    | Playing(id) => (songs, PausedOn(id))
    | _ => playlist
  | RemoveSong(id) => (List.filter(fun x -> x != id, songs), state)
  | AddSong(id) => (songs @ [id], state)
  end