# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun m, a ->
  case a
  | AddTodo => add(m)
  | RemoveTodo(i) => let (buffer, todos) = m in (buffer, remove(i, todos))
  | ToggleTodo(i) => let (buffer, todos) = m in (buffer, toggle(i, todos))
  | UpdateBuffer(s) => let (_, todos) = m in (s, todos)
  end
in
