# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | Toggle(idx) => model.todos := toggle(idx, model.todos)
  | Remove(idx) => model.todos := remove(idx, model.todos)
  | Add => model.todos := add(model)
  | Noop => model
  end
in
