# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun model, action ->
  case action
  | AddTodo => (model.1, (model.0, false)::model.1)
  | RemoveTodo(idx) => (model.0, List.remove(idx, model.1))
  | ToggleTodo(idx) =>
    let toggle: Todo -> Todo = fun (s, b) -> (s, not b) in
    (model.0, List.update(idx, toggle, model.1))
  | UpdateBuffer(s) => (s, model.1)
  end
in
