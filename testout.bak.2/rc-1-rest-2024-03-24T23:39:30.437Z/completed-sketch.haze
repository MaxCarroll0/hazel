# TODO MVU: Handle TODO actions to update the app model #

let update: (Model, Action) -> Model =
  fun (model, action) -> 
    case action 
    | AddTodo => (model, addTodoAction())
    | RemoveTodo(i) => (model, removeTodoAction(i))
    | ToggleTodo(i) => (model, toggleTodoAction(i))
    | UpdateBuffer(s) => (model, updateBufferAction(s))
    end
in
