fun model, action ->
  case action
  | AddTodo => (model.1, (model.0, false)::model.1)
  | RemoveTodo(idx) => (model.0, List.remove(idx, model.1))
  | ToggleTodo(idx) =>
      let (desc,done) = List.nth(idx, model.1) in
      (model.0, List.update(idx, (desc, not done), model.1))
  | UpdateBuffer(new_buffer) => (new_buffer, model.1)
  end