fun (playlist, action) ->
  case action
  | PlaySong(id) =>
    (get_songs(playlist), Playing(id))
  | PauseCurrentSong =>
    case get_state(playlist) of
    | Playing(id) => (get_songs(playlist), PausedOn(id))
    | other => (get_songs(playlist), other)
    end
  | RemoveSong(id) =>
    (List.remove(id, get_songs(playlist)), get_state(playlist))
  | AddSong(id) =>
    (id::get_songs(playlist), get_state(playlist)) 
  end