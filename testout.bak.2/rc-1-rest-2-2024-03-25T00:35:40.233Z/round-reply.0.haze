
fun (playlist, action) ->
  case action of
  | PlaySong(id) => (get_songs(playlist), Playing(id))
  | PauseCurrentSong =>
    case get_state(playlist) of
    | Playing(id) => (get_songs(playlist), PausedOn(id))
    | _ => playlist
    end
  | RemoveSong(id) => List.remove(id,get_songs(playlist)), get_state(playlist)
  | AddSong(id) => (id :: get_songs(playlist), get_state(playlist))
  end
